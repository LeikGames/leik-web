---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Social from "../components/Social.astro";
---

<Layout title="Leik Games">
  <main>
    <h1 class="mt-20 mb-10 text-center text-4xl font-['Josefin_Sans_Variable']">
      LEIK<br />GAMES
    </h1>
    <div class="flex flex-col md:flex-row justify-items-center">
      <Card
        titleName="Camilla"
        qualiItems={["game design", "2D art"]}
        image="/camillaWeb.png"
      />
      <Card
        titleName="Oliver"
        qualiItems={["programming", "tuition"]}
        image="/oliverWeb.png"
      />
    </div>
        <div class="my-20 flex flex-row justify-around">

            <Social icon="material-symbols:mail-sharp" href="mailto:hello@leik.games" color="text-red-500">
                hello@leik.games
            </Social>

            <Social icon="material-symbols:location-on" href="https://maps.app.goo.gl/BoLTFi2WSAYsCvou5" color="text-amber-500">
                Nygaardsgata 33 A 1607 Fredrikstad
            </Social>

            <Social icon="logos:discord-icon" href="https://discord.gg/MVjVFpv3">
                Join our Discord
            </Social>

            <Social icon="mdi:blog" href="https://forums.tigsource.com/index.php?topic=75659.0">
                Dicetris devlog
            </Social>
        </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 12pt;
    line-height: 1.4;
  }
</style>
