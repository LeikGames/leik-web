---
import Layout from '../layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
import Title from '../components/Title.astro'
---

<Layout title="Leik Games">
    <div class="container">
        <main class="vh-100">
            <Title addStyle="pb-5" big />
            <div
                class="container text-center w-lg-25 w-50 py-5 h-50 d-flex justify-content-between flex-column"
            >
                <a class="text-decoration-none text-reset fs-3 my-5" href="/about"
                    >About us <Icon name="mdi:arrow-right-circle" width="24" height="24" /></a
                >
                <a class="text-decoration-none text-reset fs-3 my-5" href="/games"
                    >Games <Icon name="mdi:arrow-right-circle" width="24" height="24" /></a
                >
                <a class="text-decoration-none text-reset fs-3 my-5" href="/contact"
                    >Contact <Icon name="mdi:arrow-right-circle" width="24" height="24" /></a
                >
            </div>
        </main>
    </div>
</Layout>
